<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="true">
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"
        android:visible="true"
        android:dither="true"
        android:useLevel="false">
        <gradient
            android:startColor="#4448b3ff"
            android:endColor="#4448b3ff"
            android:angle="270"/>
        <corners
            android:radius="90dp"/>
        <size
            android:width="80dp"
            android:height="40dp" />
    </shape>
</item>
<item android:state_checked="false">
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"
        android:visible="true"
        android:dither="true"
        android:useLevel="false">
        <gradient
            android:startColor="#aaCCCCCC"
            android:endColor="#aaCCCCCC"
            android:angle="270"/>
        <corners
            android:radius="90dp"/>
        <size
            android:width="80dp"
            android:height="40dp" />
    </shape>
</item>

</selector>